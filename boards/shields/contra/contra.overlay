/ {
    zephyr,console = &uart1;
};

&gpio0 {
    status = "okay";
};

&key_matrix {
    rows = <4>;  // Four rows, one for each key
    cols = <1>;  // Only one column (if using single column setup)

    // Define each row GPIO pin (for individual keys)
    row-gpios = <&gpio0 10 GPIO_ACTIVE_HIGH   // Key 1
                 &gpio0 11 GPIO_ACTIVE_HIGH   // Key 2
                 &gpio0 12 GPIO_ACTIVE_HIGH   // Key 3
                 &gpio0 13 GPIO_ACTIVE_HIGH>; // Key 4
};
